<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.jaipeh.mascotas.fragments.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewMiMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgCircular"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/gato"
                    app:civ_border_color="#99000000"
                    app:civ_border_width="4dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtMascota"
                    android:layout_gravity="center"
                    android:layout_below="@id/imgCircular"
                    android:textSize="35dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerFragmentMiMascota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cardViewMiMascota">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
